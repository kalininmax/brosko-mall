<article class="event-card{% if props.className %} {{ props.className }}{% endif %}"{% if props.bgColor %} style="--bg-color:{{ props.bgColor }}"{% endif %}>
	<a class="event-card__info uppercase"{% if props.url %} href="{{ props.url }}"{% endif %}>
		<p class="event-card__title text-m-medium">{{ props.title | safe }}</p>
		<p class="event-card__date text-m-regular">{{ props.date | safe }}</p>
	</a>

	<picture class="event-card__picture">
		<img class="event-card__img full-size-img" src="{{ props.imgSrc }}" alt="" style="--bg-color-img:{{ props.bgColor }}" data-animation="coloredImg">
	</picture>
</article>
