{% if props.href %}
	<a
		class="button{% if props.className %} {{ props.className }}{% endif %}"
		href="{{ props.href }}"
		{% if props.attr %} {{ props.attr | safe }}{% endif %}>

		{% if props.iconName %}
			{{ component('icon', {
				iconName: props.iconName,
				className: 'button__icon',
				attr: props.iconAttr + ' aria-hidden="true" role="presentation"'
			}) }}
		{% endif %}

		{% if props.text %}
			<span class="button__text">{{ props.text }}</span>
		{% endif %}
	</a>
{% else %}
	<button
		class="button{% if props.className %} {{ props.className }}{% endif %}"
		type="{% if props.type %}{{ props.type }}{% else %}button{% endif %}"
		{% if props.attr %} {{ props.attr | safe }}{% endif %}>

		{% if props.iconName %}
			{{ component('icon', {
				iconName: props.iconName,
				className: 'button__icon',
				attr: props.iconAttr + ' aria-hidden="true" role="presentation"'
			}) }}
		{% endif %}

		{% if props.text %}
			<span class="button__text">{{ props.text }}</span>
		{% endif %}
	</button>
{% endif %}
