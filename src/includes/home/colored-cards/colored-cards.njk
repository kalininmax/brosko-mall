<div class="page__section page__colored-cards colored-cards container">
	<ul class="colored-cards__list" data-animation="fadeInCards">
		{% for pageData in home.otherPages %}
			<li class="colored-cards__item">
				{{ component('colored-card', {
					className: 'colored-cards__card _img-' + pageData.imgPosition,
					url: pageData.url,
					title: pageData.mainTitle,
					img: pageData.coverImg,
					bgColor: pageData.cardColor
				}) }}
			</li>
		{% endfor %}
	</ul>
</div>
